generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou "mysql" se preferir
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  searches  Search[]
}

model Search {
  id        Int      @id @default(autoincrement())
  word      String
  type      String   // "TRANSLATION", "PRONUNCIATION", "CONTEXT"
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
} 
